package Exo1;

public class Histoire {
    public static void main(String[] args) {
        Dame dame = new Dame("Lucy", "rouge");
        Brigand brigand = new Brigand("Joe", "m√©chant");
        Cowboy cowboy = new Cowboy("Billy", "vaillant");

        brigand.kidnapper(dame);
