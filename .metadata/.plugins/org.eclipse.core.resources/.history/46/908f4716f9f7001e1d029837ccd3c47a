package sae.graphe;

import java.util.HashSet;
import java.util.Map;
import java.util.Set;

import sae.dungeon.Coord;
import sae.dungeon.Direction;
import sae.dungeon.Room;


public class Node {
	private String name;
	private Set<Node> voisins;
	private Coord coords;
	
	public Node(String name, Coord coords) {
		super();
		this.coords = coords;
		this.name = name;
		voisins = new HashSet<>();
	}
	
	public void addVoisin(Node node) {
		voisins.add(node);
	}
	
	public Set<Node> getVoisins() {
		return voisins;
	}
	
	
	public Coord getCoords() {
		return coords;
	}
	

}
